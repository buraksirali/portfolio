---
import { appConfig } from '../../config';
import { createTranslator, type Locale } from '../../i18n';
import Hero from '../ui/Hero.astro';

const locale = (Astro.locals.locale ?? appConfig.locales.defaultLocale) as Locale;
const translator = createTranslator(locale);
---

<Hero
	title={translator('hero.title')}
	subtitle={translator('hero.subtitle')}
	eyebrow={translator('hero.eyebrow')}
	actions={[
		{ label: translator('hero.ctaPrimary'), href: `/${locale}/projects/`, variant: 'primary' },
		{ label: translator('hero.ctaSecondary'), href: `/${locale}/contact/`, variant: 'ghost' }
	]}
/>
