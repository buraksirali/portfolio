---
import { appConfig } from '../../config';
import { createTranslator, type Locale } from '../../i18n';
import Section from '../ui/Section.astro';

const locale = (Astro.locals.locale ?? appConfig.locales.defaultLocale) as Locale;
const translator = createTranslator(locale);
---

<Section title={translator('about.title')} description={translator('about.body')}>
	<div class="bg-[color:var(--color-surface)] border border-[color:var(--color-border)] rounded-2xl p-6 shadow-card">
		<p class="text-[color:var(--color-muted)]">{appConfig.branding.tagline}</p>
	</div>
</Section>
