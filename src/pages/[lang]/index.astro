---
import BaseLayout from '../../components/smart/BaseLayout.astro';
import AboutBlock from '../../components/smart/AboutBlock.astro';
import ContactBlock from '../../components/smart/ContactBlock.astro';
import HeroSection from '../../components/smart/HeroSection.astro';
import ProjectsGrid from '../../components/smart/ProjectsGrid.astro';
import { appConfig } from '../../config';
import { createTranslator, type Locale } from '../../i18n';

const locale = (Astro.params.lang ?? appConfig.locales.defaultLocale) as Locale;
Astro.locals.locale = locale;
const translator = createTranslator(locale);
---

<BaseLayout
	title={translator('seo.homeTitle')}
	description={translator('hero.subtitle')}
	urlPathname={`/${locale}/`}
>
	<HeroSection />
	<ProjectsGrid />
	<AboutBlock />
	<ContactBlock />
</BaseLayout>
