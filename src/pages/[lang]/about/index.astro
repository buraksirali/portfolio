---
import BaseLayout from '../../../components/smart/BaseLayout.astro';
import AboutBlock from '../../../components/smart/AboutBlock.astro';
import GenericPageSections from '../../../components/smart/GenericPageSections.astro';
import { appConfig } from '../../../config';
import { createTranslator, type Locale } from '../../../i18n';

const locale = (Astro.params.lang ?? appConfig.locales.defaultLocale) as Locale;
Astro.locals.locale = locale;
const translator = createTranslator(locale);
---

<BaseLayout title={translator('about.title')} description={translator('about.body')} urlPathname={`/${locale}/about/`}>
	<AboutBlock />
	<GenericPageSections slug="about" />
</BaseLayout>
